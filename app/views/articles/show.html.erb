<script data-parsed-article type="text/json" charset="utf-8"><%= @parsed_article.to_json.html_safe %>
</script>

<div id="content">
  <script id="text-template" type="text/x-handlebars-template">
    {{#each words}}
      {{#showSourceLanguage level}}
        {{{source}}}
      {{else}}
        <b class="foreign">{{{target}}}</b>
      {{/showSourceLanguage}}
    {{/each}}
  </script>
</div>
<div id="preferences">
  <div id="options">
    <select name="Language" id="language">
      <option class="choice" value="en">English</option>
      <option class="choice" value="es">Spanish</option>
      <option class="choice" value="fr">French</option>
      <option class="choice" value="de">German</option>
      <option class="choice" value="it">Italian</option>
      <option class="choice" value="pt">Portuguese</option>
      <option class="choice" value="ja">Japanese</option>
      <option class="choice" value="zh-CN">Mandarin</option>
      <option class="choice" value="ru">Russian</option>
      <option class="choice" value="el">Greek</option>
    </select>
  </div>
  <input id="slider" data-source="<%= @language %>" type="range" name="points" min="1" max="30" step="1" value="1">
</div>
<div id="article" data-source="<%= @article.source_language %>"></div>
